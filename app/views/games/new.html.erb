<div class="container">
  <h1>NEW GAME</h1>
    <div class="p-5 d-flex justify-content-between">
      <% @letters.each do |letter|%>
        <div class="p-1 px-2 ml-5 bg-primary">
          <p class="mb-0"><%= letter%></p>
        </div>
      <%end%>
    </div>
  <form class="form-inline p-4" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="form-group mb-2"> 
      <h1 class="sr-only">Find the longest word</h1>
    </div>
    <div class="form-group mb-2 d-flex"> 
      <input class="form-control w-50 rounded-left" id="exampleFormControlInput1" type="text" name="word">
      <button type="submit" class="btn btn-primary rounded-right">Send</button> 
    </div> 
  </form>
</div>
</div>



  <style>
    .form-control{
      border-radius: 8px 0px 0px 8px !important;
    }
    .btn {  
      border-radius: 0px 8px 8px 0px !important;
    }
  </style>